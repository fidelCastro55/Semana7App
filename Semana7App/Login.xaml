<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7App.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="BIENVENIDO" FontSize="Medium" HorizontalOptions="Center"/>

            <Entry x:Name="txtUser" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese la contasena" IsPassword="True"/>
            <Button x:Name="btnIniciar" Text="Iniciar sesion" Clicked="btnIniciar_Clicked" BackgroundColor="Green" TextColor="White"/>
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked" BackgroundColor="Blue" TextColor="White"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>