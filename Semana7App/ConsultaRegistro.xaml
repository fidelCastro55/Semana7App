<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7App.ConsultaRegistro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Listado" FontSize="20"></Label>
            <ListView x:Name="ListarUsuarios" ItemSelected="ListarUsuarios_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nombre}" Detail="{Binding usuario}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>